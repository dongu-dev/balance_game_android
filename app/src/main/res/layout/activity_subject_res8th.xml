<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView_subject15"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_weight="1"
        android:src="@drawable/subject15"
        android:scaleType="center" />

    <TextView
        android:id="@+id/textView_subject15"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#c0c0c0"
        android:gravity="center_horizontal"
        android:src="@drawable/ic_launcher_background"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView_subject16"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_weight="1"
        android:src="@drawable/subject14"
        android:scaleType="center" />

    <TextView
        android:id="@+id/textView_subject16"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#c0c0c0"
        android:gravity="center_horizontal"
        android:src="@drawable/ic_launcher_background"
        android:textSize="24sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="center" >

        <Button
            android:id="@+id/res_button_subject14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이전" />

        <Button
            android:id="@+id/res_button_subject15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메인화면으로" />
    </LinearLayout>
</LinearLayout>
